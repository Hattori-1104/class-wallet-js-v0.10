{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules"],
		"include": ["app", "prisma/seed.ts"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"noDefaultExport": "off",
				"useSelfClosingElements": "warn",
				"useBlockStatements": "off",
				"noImplicitBoolean": "off",
				"useNamingConvention": "off",
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"noEmptyPattern": "off",
				"useImportExtensions": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"noArrayIndexKey": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
